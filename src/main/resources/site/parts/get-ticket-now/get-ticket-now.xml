<part>	
	<display-name>Get ticket now</display-name>
	<description>Promot ticket</description>
	<form>
		<input type="TextLine" name="description">
          <label>Description</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="TextLine" name="ticketUrl">
            <label>Ticket URL</label>
            <occurrences minimum="1" maximum="1"/>
            <config>            
                <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
            </config>
        </input>
        <input type="ImageSelector" name="backgroundImage">
          <label>Background image</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="ImageSelector" name="foregroundImage">
          <label>Foreground image</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
	</form>
</part>
