<part>
	<display-name>FAQ</display-name>
  <description>A collection of users frequently asked questions</description>
  <form>
    <input type="TextLine" name="description">
        <label>Description</label>
        <occurrences minimum="1" maximum="1"/>
    </input>
    <field-set>
      <label>Questions</label>
      <items>
        <item-set name="questions"> 
          <label>a question</label> 
          <occurrences minimum="0" maximum="0"/>
          <help-text>Questions may be specified here.</help-text> 
          <items>
            <input type="TextLine" name="question">
              <label>Question</label>
              <occurrences minimum="1" maximum="1"/>
              <config>
                <max-length>70</max-length>
              </config>
            </input>
            <input type="HtmlArea" name="answer">
              <label>Answer</label>
              <occurrences minimum="1" maximum="1"/>
            </input>
          </items>
        </item-set>
      </items>
    </field-set>
  </form>
</part>
