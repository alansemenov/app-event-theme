<?xml version="1.0" encoding="UTF-8"?>
<site>
  <form>
	  <!-- Insert site-wide settings here -->
    <input type="HtmlArea" name="licence">
      <label>Licence</label>
      <default>
        <p>Copyright &#169; Enonic AS. All Rights Reserved. 
          <a href="https://enonic.com/privacy-policy">Privacy Policy</a>.
          <a href="https://enonic.com/cookie-policy">Cookie Policy</a>.
        </p>
      </default>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <!--  -->
    <input type="ImageSelector" name="headerLogo">
      <label>Logo in header (on light background)</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="ImageSelector" name="footerLogo">
      <label>Logo in footer (on dark background)</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <!--  -->
    <input type="TextLine" name="facebookUrl">
      <label>Facebook URL</label>
      <occurrences minimum="0" maximum="1"/>
          <config>            
            <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
          </config>
    </input>
    <input type="TextLine" name="twitterUrl">
      <label>Twitter URL</label>
      <occurrences minimum="0" maximum="1"/>
          <config>            
            <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
          </config>
    </input>
    <input type="TextLine" name="instagramUrl">
      <label>Instagram URL</label>
      <occurrences minimum="0" maximum="1"/>
          <config>            
            <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
          </config>
    </input>
    <input type="TextLine" name="rssUrl">
      <label>RSS URL</label>
      <occurrences minimum="0" maximum="1"/>
          <config>            
            <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
          </config>
    </input>
    <input type="TextLine" name="vimeoUrl">
      <label>Vimeo URL</label>
      <occurrences minimum="0" maximum="1"/>
          <config>            
            <regexp>^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$</regexp> 
          </config>
    </input>
    <!--  -->
    <input type="TextLine" name="ticketUrl">
      <label>Ticket URL</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="TextLine" name="ticketText">
      <label>Ticket Text</label>
      <default>BUY TICKET</default>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="CheckBox" name="breadcrumbsHideBanner">
      <label>Hide breadcrumb banner</label>
      <config>
        <alignment>right</alignment> 
      </config>
    </input>
    <input type="ImageSelector" name="breadcrumbsBackground">
      <label>Background image in breadcrumbs</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
	  <!-- Mixin of the type "inline" goes here -->
  </form>
  <!-- Mixin of the type "x-data" goes here -->  
  <x-data name="menu-item"/>
  <!-- Used for Fragments to work in XP Content Studio preview -->
  <mappings>
    <mapping controller="/site/pages/default/default.js">
      <match>type:'portal:fragment'</match>
    </mapping>
  </mappings>
</site>
