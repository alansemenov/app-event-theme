<site>
  <form>
	  <!-- Insert site-wide settings here -->
	  <input type="CheckBox" name="colorize">
		  <label>Colorize component borders?</label>
		  <occurrences minimum="0" maximum="1"/>
		  <default>false</default>
		  <help-text>Adds a colored border to all XP components so it is easier to overview what is what.</help-text>
	  </input>
    <input type="HtmlArea" name="licence">
      <label>Licence</label>
      <default><p><a>Eventre</a> Â© 2017 All Right Reserved</p></default>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <!--  -->
    <input type="ImageSelector" name="headerLogo">
      <label>Logo in header (on light background)</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input type="ImageSelector" name="footerLogo">
      <label>Logo in footer (on dark background)</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
