<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>News Article</display-name>
  <super-type>base:structured</super-type>
  <form>
    <field-set>
      <label>News Article</label>
      <items>
        <input type="TextLine" name="category">
          <label>Category</label>
          <occurences minimum="1" maximum="1"/>
          <default>Uncategorized</default>
        </input>
        <input type="ImageSelector" name="image">
          <label>Image</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="HtmlArea" name="description">
          <label>Content</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="Tag" name="tag">
          <label>Tags</label>
          <occurrences minimum="0" maximum="0"/>
        </input>
      </items>
    </field-set>
  </form>
</content-type>
