<part>
	<display-name>Latest Article</display-name>
	<description>Lists latest articles by ascending date</description>
	<form>
        <input type="TextLine" name="numPosts"> <!-- Regular expression will not work unless type is TextLine -->
            <label>Maximum number of News Articles</label>
            <occurrences minimum="1" maximum="1"/>
            <default>5</default>
            <config>
                <regexp>^[1-9]\d*$</regexp>
            </config>
        </input>
	</form>
</part>
